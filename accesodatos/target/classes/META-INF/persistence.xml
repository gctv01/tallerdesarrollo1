<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

    <persistence-unit name="ormprueba">
        <class>ucab.dsw.entidades.TipoUsuario</class>
        <class>ucab.dsw.entidades.Usuario</class>
        <class>ucab.dsw.entidades.categoria</class>
        <class>ucab.dsw.entidades.subCategoria</class>
        <class>ucab.dsw.entidades.solicitud</class>
        <class>ucab.dsw.entidades.Estudio</class>
        <class>ucab.dsw.entidades.Encuesta</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/practicaorm?serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="eclipselink.logging.level" value="FINE"/>
        </properties>
    </persistence-unit>

</persistence>
